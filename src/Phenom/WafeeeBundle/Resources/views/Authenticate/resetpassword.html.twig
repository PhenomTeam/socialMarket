{% endblock %}

{#  TITLE   #}
{% block title %}Reset Password{% endblock %}

{#  CONTENT   #}

{% block slider %}

{% endblock %}


{% block content %}
    <div class="content-field">

        {#  CONTENT HEADER    #}
        <div class="content-header">
            <img src="{{ asset('bundles/phenomwafeee/images/ResetPasswordPage/ResetPassword.png') }}">
        </div>

        {#  CONTENT BODY        #}
        <div class="content-body">
            <form class="reset-password-form" method="post">
                <div class="reset-password-field">
