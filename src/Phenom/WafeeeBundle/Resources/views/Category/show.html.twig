{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Category</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ category.description }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('category_list') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('category_edit', { 'id': category.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <a href="{{ path('add_product', { 'id': category.id }) }}">
            Add New Product
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
