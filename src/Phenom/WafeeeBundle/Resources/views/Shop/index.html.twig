{% extends '::base.html.twig' %}

{% block body %}
    <h1>Shop list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Name</th>
                <th>Avatarname</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for shop in shops %}
            <tr>
                <td>{{ shop.name }}</td>
                <td>{{ shop.avatarName }}</td>
                <td>{{ shop.description }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('shop_show', { 'id': shop.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('shop_edit', { 'id': shop.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('shop_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
